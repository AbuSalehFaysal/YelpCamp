<style>
  @media (min-width: 992px) and (max-width: 1199.98px) {
    form {
      width: 50%;
    }
  }
  @media (min-width: 1200px) {
    form {
      width: 50%;
    }
  }
</style>
<%- include('../partials/header') %>
<div style="margin-top: 7%" class="container">
  <h1 class="display-4 text-center">Add New Comment <%= campground.name %></h1>
  <form
    style="margin: auto"
    action="/campgrounds/<%= campground._id %>/comments"
    method="POST"
  >
    <div class="input-group input-group-md mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-lg">Comments</span>
      </div>
      <input
        type="text"
        name="comment[text]"
        class="form-control"
        aria-label="Sizing example input"
        aria-describedby="inputGroup-sizing-lg"
      />
    </div>
    <button class="btn btn-primary btn-block btn-lg" type="submit">
      SUBMIT
    </button>
  </form>

  <div class="row">
    <a
      style="margin: auto"
      class="btn btn-secondary btn-sm mt-2 mb-2 ml-6"
      href="/campgrounds"
      >Back to Campground!</a
    >
  </div>
</div>
<%- include('../partials/footer') %>
