<%- include('partials/header') %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1 class="display-4">Welcome to YelpCamp!</h1>
                <p class="lead">View our campgrounds from all over the world.</p>
                <hr class="my-4">
                <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
            </div>
        </header>
        <div class="row">
            <% campgrounds.forEach(campground => { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img class="img-thumbnail" src="<%= campground.image %>" alt="">
                        <div class="caption">
                            <h4 class="text-center"><%= campground.name %></h4>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <a class="btn btn-info btn-lg btn-block mt-2 mb-2" href="/">Back to the Home Page!</a>
    </div>
<%- include('partials/footer') %>